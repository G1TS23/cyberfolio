{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Utilisateur</h1>
    {% endif %}
    {% if is_granted('ROLE_USER') %}
    <h1>Compte</h1>
    {% endif %}
    <table class="table" style="max-width: 500px">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Github_url</th>
            <td>{{ user.githubUrl }}</td>
        </tr>
        </tbody>
    </table>
    <div class="example-wrapper">
        <a class="btn btn-lg btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('user/_delete_form.html.twig') }}
            <a class="btn btn-lg btn-dark" href="{{ path('app_user_index') }}">Annuler</a>
        {% endif %}
    </div>
{% endblock %}
