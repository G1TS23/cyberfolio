{% extends 'base.html.twig' %}

{% block title %}Technology{% endblock %}

{% block body %}
    <h1>Technologie</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ technology.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ technology.name }}</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td>{{ technology.logo }}</td>
        </tr>
        <tr>
            <th>Version</th>
            <td>{{ technology.version }}</td>
        </tr>
        <tr>
            <th>Niveau de maitrise</th>
            <td>{{ technology.masteryLevel }}</td>
        </tr>
        </tbody>
    </table>
    <div class="example-wrapper">
        <a class="btn btn-lg btn-primary" href="{{ path('app_technology_edit', {'id': technology.id}) }}">Modifier</a>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('technology/_delete_form.html.twig') }}
        {% endif %}
        <a class="btn btn-lg btn-dark" href="{{ path('app_technology_index') }}">Annuler</a>
    </div>
{% endblock %}
